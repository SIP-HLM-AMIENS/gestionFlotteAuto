{% extends 'base.html.twig' %}

{% block title %}Associer un pointage{% endblock %}
{% block body %}
<h1 class="text-center">Associer un pointage</h1>
<br />
<div class="container">
{{form_start(form)}}
    <div class="row">
        <div class="col-5">
            <h3 class="text-center">Reservations</h3>
            <table class="table table-bordered">
                <thead>
                    <tr class="table-info">
                        <th>N°</th>
                        <th>Début</th>
                        <th>Fin</th>
                        <th>Voiture</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% for reservation in reservations %}
                        <tr>
                            <td>{{ reservation.id }}</td>
                            <td>{{ reservation.debut|date("d/m/Y H:i", "Europe/Paris") }}</td>
                            <td>{{ reservation.fin|date("d/m/Y H:i", "Europe/Paris") }}</td>
                            <td>{{ reservation.voiture.numero }}</td>
                            <td><input id="reservationCheck" name="reservationCheck" value="{{reservation.id}}" type="checkbox"></td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="col-2">
            <h3 class="text-center">-></h3>
        </div>
        <div class="col-5">
            <h3 class="text-center">Pointages</h3>
            <table class="table table-bordered">
                <thead>
                    <tr class="table-info">
                        <th>N°</th>
                        <th>Début</th>
                        <th>Fin</th>
                        <th>Voiture</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% for pointage in pointages %}
                        <tr>
                            <td>{{ pointage.id }}</td>
                            <td>{{ pointage.sortie|date("d/m/Y H:i", "Europe/Paris") }}</td>
                            <td>{{ pointage.entree|date("d/m/Y H:i", "Europe/Paris") }}</td>
                            <td>{{ pointage.voiture.numero }}</td>
                            <td><input id="pointageCheck" name="pointageCheck" value="{{pointage.id}}" type="checkbox"></td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-2 offset-lg-5">
            {{ form_widget(form.save) }}
        </div>
    </div>
{{form_end(form)}}
</div>

{% endblock %}