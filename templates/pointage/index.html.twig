{% extends 'base.html.twig' %}

{% block title %}Pointage{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="text-center">Pointage</h1>
        </div>
    </div>
    {{ form_start(form) }}
    <div class="row">
        <div class="col-lg-12">
            {{form_row(form.reservation)}}
        </div>
    </div>
    <div class="row">
        <div class="col-lg-6">
            <div class="jumbotron">
                <h3 class="text-center">Sortie parking</h3>
                <hr class="my-4">
                <div class="row form-inline">
                    <div class="col-6 form-inline">
                        <label>Date</label>
                        {{form_widget(form.sortie.date)}}
                    </div>
                    <div class="col-6 form-inline">
                        <label>Heure</label>
                        {{form_widget(form.sortie.time)}}
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-lg-12">
                        {{form_row(form.kiloAvant)}}
                    </div>
                    <div class="col-12 form-group">
                        {{form_row(form.obsAvant)}}
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="jumbotron">
                <h3 class="text-center">Entr√©e parking</h3>
                <hr class="my-4">
                <div class="row form-inline">
                    <div class="col-6 form-inline">
                        <label>Date</label>
                        {{form_widget(form.entree.date)}}
                    </div>
                    <div class="col-6 form-inline">
                        <label>Heure</label>
                        {{form_widget(form.entree.time)}}
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-12">
                        {{form_row(form.kiloApres)}}
                    </div>
                    <div class="col-12">
                        {{form_row(form.obsApres)}}               
                    </div>
                    <div class="col-12">
                        {{form_row(form.emplacement)}}
                    </div>
                </div>
            </div>    
        </div>
    </div>
    <div class="row">
        <div class="col-lg-2 offset-lg-10">
            {{form_row(form.valider)}}
        </div>
    </div>

    {{ form_end(form) }}
</div>
{% endblock %}
